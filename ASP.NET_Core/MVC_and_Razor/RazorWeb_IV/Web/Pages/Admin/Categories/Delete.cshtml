@page 
@model Web.Pages.Admin.Categories.DeleteModel
@{
    ViewData["Title"] = "Delete Category";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-12">
            <h2 class="text-primary text-center">Delete Category</h2>
        </div>

        <!-- Shows all the validation summary here -->
        <div asp-validation-summary="All"></div>
    </div>
    <br />

    <div class="d-flex justify-content-center">
        <div class="align-content-center" style="width: 30%;">
            <form method="post" asp-page="Create">
                <input id="txtId" hidden asp-for="Category.Id" />
                <div class="mb-3">
                    <label for="txtName" class="form-label" asp-for="Category.Name"></label>
                    <input type="text" class="form-control" id="txtName" asp-for="Category.Name" placeholder="Enter name" disabled>
                </div>
                <div class="mb-3">
                    <label for="txtDesc" class="form-label" asp-for="Category.Description"></label>
                    <input type="text" class="form-control" id="txtDesc" asp-for="Category.Description" placeholder="Enter description" disabled>
                </div>
                <div class="mb-3">
                    <label for="txtDisplayOrder" class="form-label" asp-for="Category.DisplayOrder"></label>
                    <input type="number" class="form-control" id="txtDisplayOrder" asp-for="Category.DisplayOrder" placeholder="Enter display order" disabled>
                </div>

                <div class="d-flex justify-content-center btn-group">
                    <a class="btn btn-secondary mx-2 p-0" asp-page="Index" style="width: 150px; padding: 0.5px;">
                        <i class="bi bi-arrow-left-circle" style="font-size: 24px;"></i>
                    </a>
                    <button type="submit" class="btn btn-danger mx-2" style="width: 150px;">Delete</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts{

    <!-- Addding Client side validations with this Partial Script added -->
    <partial name="_ValidationScriptsPartial" />
}