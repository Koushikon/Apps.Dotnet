@model Domain.Entities.Product
@{
    ViewData["Title"] = "Add/Edit Product";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-12">
            <h2 id="pageHeader" class="text-primary text-center"></h2>
        </div>
    </div>
    <br />

    <div class="d-flex justify-content-center">
        <div class="align-content-center" style="width: 30%;">
            <form method="post" asp-controller="Home" asp-action="UpsertProduct">
                <input id="txtId" hidden asp-for="Id" />
                <div class="mb-3">
                    <label for="txtName" class="form-label" asp-for="Name"></label>
                    <input type="text" class="form-control" id="txtName" asp-for="Name" placeholder="Enter name" required>
                </div>
                <div class="mb-3">
                    <label for="txtPrice" class="form-label" asp-for="Price"></label>
                    <input type="text" class="form-control" id="txtPrice" asp-for="Price" placeholder="Enter price" required>
                </div>
                <div class="mb-3">
                    <label for="txtDesc" class="form-label" asp-for="Description"></label>
                    <input type="text" class="form-control" id="txtDesc" asp-for="Description" placeholder="Enter description">
                </div>
                <div class="mb-3">
                    <label for="txtRankNumber" class="form-label" asp-for="Rank"></label>
                    <input type="number" class="form-control" id="txtRankNumber" asp-for="Rank" placeholder="Enter rank No">
                </div>

                <div class="d-flex justify-content-center btn-group">
                    <a class="btn btn-secondary mx-2" asp-controller="Home" asp-action="Index" style="width: 150px;">Back To Home</a>
                    <button type="submit" class="btn btn-primary mx-2" id="btnSave" name="Command" value="Save" style="width: 150px;">Save</button>
                </div>
            </form>
        </div>
    </div>
</div>