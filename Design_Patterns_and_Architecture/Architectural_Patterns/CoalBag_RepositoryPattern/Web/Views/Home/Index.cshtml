@model Domain.Entities.Product
@{
    ViewData["Title"] = "Show Product Page";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-10">
            <h2 class="text-primary text-center">Product List</h2>
        </div>
        <div class="col-2">
            <a asp-controller="Home" asp-action="UpsertProduct" class="btn btn-primary float-end">
                <i class="bi bi-plus-square"></i> &nbsp;
                Add Product
            </a>
        </div>
    </div>
    <br />

    <table class="table table-bordered table-striped" style="width: 100%;">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Rank</th>
                <th>Price</th>
                <th>Description</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.ProductList)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>@item.Rank</td>
                    <td>@item.Price</td>
                    <td>@item.Description</td>
                    <td>
                        <div class="w-75 btn-group">
                            <a href="/Home/UpsertProduct/@item.Id" class="btn btn-primary mx-2"><i class="bi bi-pencil-square"></i></a>
                            <a href="#" class="btn btn-danger mx-2"><i class="bi bi-trash-fill"></i></a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>